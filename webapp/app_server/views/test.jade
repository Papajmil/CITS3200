doctype html
html
  head
    // Title of Page
    title Exam Question Database
    // Meta Tags
    meta(charset='UTF-8')
    meta(name='description', content='Find existing exam questions easily')
    meta(name='author', content='Sam Fairs, Chen Liu, Joshua Milambo, Lachlan Bunney, Michael Bleakley, Minrui Lu')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='keywords', content='Physics, Exam, Question, Database, Latex')
    // Links/References
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href='https://fonts.googleapis.com/css?family=Poppins:400,400i,700', rel='stylesheet')
  // Body of Page
  body
    // Navbar
    nav.navbar
      .navTitle
        a(href='/') Exam Question Database
        form.navSearch(method='get', action='result', enctype='multipart/form-data')
          input#navSearch(type='text', placeholder="Light, Electricity, Gauss's Law", name='keywords')
          button(type='navSubmit')
            img(width='40px', height='40px', src='images/search_icon.png')
      ul.navMenu
        li
          a(href='/') Logout
        li
          a(href='/upload') Upload Question
        li
          a(href='/test') View Test
        li
          a(href='/testhistory') Update Result
    // Main
    .main
      // Test Qestions
      #results.formContainer
        h1 Test Questions
        .result.one.header
          .split
            h2 TITLE
          .split
            h2 REMOVE
        .result.two
          .split
            a(href='/question')
              p Speed of Light in a Material
          .split
            button(type='remove', onclick="location.href='/test';") X
      // Test Detail
      form(class='formContainer', id='resultslower' action='addtest' method='post')
        h1 Test Detail
        .result.one.header
          .split4.left
            h2 Institution:
          .split4.right
            h2
              input(type='text', value='UWA')
        .result.one.header
          .split4.left
            h2 Unit Name:
          .split4.right
            h2
              input(type='text', value='')
        .result.one.header
          .split4.left
            h2 Assement Name:
          .split4.right
            h2
              input(type='text', value='')
        .result.one.header
          .split4.left
            h2 Date:
          .split4.right
            h2 
              input(type='text',value='')
        .result.one.header
          button(type='submit', class='download') Download
        
    // Footer
    footer.footer
      p Example filler text for the footer of the page.
